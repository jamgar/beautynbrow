title: Beauty N Brow - Contact
---
<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h2 class="text-center">Contact</h2>
        <form action="" class="form-horizontal">
          <div class="form-group">
            <input class="form-control" type="email" name="email" placeholder="Enter email.." required>
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="phone" placeholder="Enter phone (optional)">
          </div>
          <div class="form-group">
            <textarea class="form-control" name="message" rows="8" cols="80" placeholder="Enter message"></textarea>
          </div>
          <div class="form-group">
            <input type="submit" value="Send Message" class="btn btn-primary btn-block">
          </div>
        </form>
      </div>
    </div>
  </div><!-- /.container -->
</section><!-- /#contact -->
